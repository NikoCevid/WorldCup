<UserControl x:Class="WpfApp.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="80" Height="100">
    <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Dres umjesto lica -->
            <Image x:Name="imgShirt" Width="40" Height="40" Stretch="Uniform" />

            <!-- Ime igrača -->
            <TextBlock x:Name="txtName" Text="" FontWeight="Bold" FontSize="10"
                       TextAlignment="Center" TextWrapping="Wrap" />

            <!-- Broj dresa -->
            <TextBlock x:Name="txtNumber" Text="#10" FontSize="10" 
                       FontWeight="SemiBold" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
