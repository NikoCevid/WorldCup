<UserControl x:Class="WpfApp.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="90" Width="70">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5" Background="White">
        <StackPanel HorizontalAlignment="Center">
            <Image x:Name="imgPlayer" Height="40" Width="40" Margin="0,0,0,5"/>
            <TextBlock x:Name="txtName" FontWeight="Bold" FontSize="10" TextAlignment="Center" />
            <TextBlock x:Name="txtNumber" FontSize="9" TextAlignment="Center" />
        </StackPanel>
    </Border>
</UserControl>
