<Window x:Class="WpfApp.PlayerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalji igrača" Height="400" Width="300"
        WindowStartupLocation="CenterScreen" Opacity="1">
    <Grid Margin="20">
        <StackPanel>
            <Image x:Name="imgPlayer" Height="100" Margin="0,0,0,10"/>
            <TextBlock x:Name="txtName" FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="txtNumber"/>
            <TextBlock x:Name="txtPosition"/>
            <TextBlock x:Name="txtCaptain"/>
            <TextBlock x:Name="txtGoals"/>
            <TextBlock x:Name="txtYellowCards"/>
        </StackPanel>
    </Grid>
</Window>
